<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Embutidos"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep1"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:onClick="embutido"
                android:scaleType="fitCenter"
                android:src="@drawable/salchichas"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carnes, Aves y Pescados"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep"
                android:layout_marginBottom="20dp"
                android:onClick="carne"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/carne"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frutas y Verduras"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep1"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:onClick="fruta"
                android:scaleType="fitCenter"
                android:src="@drawable/frutasverduras"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lacteos y Huevos"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep1"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:onClick="lacteos"
                android:scaleType="fitCenter"
                android:src="@drawable/lacteos"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abarrotes"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:onClick="abarrotes"
                android:scaleType="fitCenter"
                android:src="@drawable/abarrotes"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaseosas"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep1"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:onClick="gaseosa"
                android:src="@drawable/beber"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licores"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car7"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:onClick="licores"
                android:src="@drawable/licores"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpieza"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car8"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep1"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:onClick="limpieza"
                android:src="@drawable/limpieza"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuidado Personal"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blue"/>
            <ImageButton
                android:id="@+id/car9"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/bluep"
                android:onClick="cuidado"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/cuidadopersonal"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>